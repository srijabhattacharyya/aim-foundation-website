rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow admins to read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to manage the patrons collection
    match /patrons/{patronId} {
       allow read: if true; // Allow anyone to read the patron logos for the homepage
       allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Lock down other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
